<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">@dimen/size16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size8</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/indent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="mainActivity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">@dimen/size24</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="settingsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/indent</item>
        <item name="android:paddingVertical">@dimen/size24</item>
        <item name="android:textSize">@dimen/text_list_size</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionBarSize">56dp</item>
    </style>
    <style name="switchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/size24</item>
        <item name="android:paddingHorizontal">@dimen/size16</item>
        <item name="thumbTint">@color/thumb_switch_selector</item>
        <item name="trackTint">@color/track_switch_selector</item>
    </style>
    <style name="editTextLayout" parent="editTextLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/indent</item>
        <item name="android:layout_marginVertical">@dimen/size8</item>
        <item name="android:paddingVertical">@dimen/size8</item>
        <item name="android:paddingHorizontal">@dimen/indent</item>
    </style>
    <style name="editText" parent="editTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_list_size</item>
        <item name="android:drawablePadding">@dimen/size8</item>
    </style>
    <style name="clear" parent="imagesViewSearchTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>