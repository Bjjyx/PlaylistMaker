<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainActivity"
    android:background="@color/white"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <androidx.appcompat.widget.Toolbar
        style="@style/toolbar"
        android:id="@+id/settingsToolbar"
        android:clickable="true"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/settings"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp"
        android:paddingHorizontal="16dp"
        android:text="@string/dark_theme"
        android:textSize="@dimen/text_list_size"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>


    <TextView
        style="@style/settingsList"
        android:id="@+id/share"
        android:text="@string/to_share"
        app:drawableEndCompat="@drawable/share"/>

    <TextView
        style="@style/settingsList"
        android:id="@+id/support"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/support"/>

    <TextView
        style="@style/settingsList"
        android:id="@+id/agreement"
        android:text="@string/agreement"
        app:drawableEndCompat="@drawable/arrow_forward"/>

</LinearLayout>